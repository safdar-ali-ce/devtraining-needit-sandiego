        <script><![CDATA[var rightnow = new GlideDateTime();
var gdt = new GlideDateTime();
var gtime1 = new GlideTime();
gtime1.setValue("24:00:00");
gdt.add(gtime1);
var niTaskGr = new GlideRecordSecure("x_58872_needit_needit_task");
niTaskGr.addQuery("due_date", ">=", rightnow);
niTaskGr.addQuery("due_date", "<", gdt); // aletrnative: gs.hoursAgo(-24)
niTaskGr.addQuery("state", "!=", 3);
niTaskGr.query();
while(niTaskGr.next()){
	gs.info("NeedIt tasks which are due in next 24 hours: " + niTaskGr.number);
	gs.eventQueue("x_58872_needit.dueSoonNeedItTasks", niTaskGr, niTaskGr.number, gs.getUserName());
}]]></script>
